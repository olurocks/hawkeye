{
  "compilerOptions": {
    "module": "ES2020",      // Or "ES2020", "Node16", "NodeNext"
    "target": "ES2020",      // Good default for modern Node.js apps
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
